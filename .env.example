# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Financial Modeling Prep API Configuration
# Get your free API key from https://financialmodelingprep.com/developer/docs/
# Used for fetching peer company data
FMP_API_KEY=your_fmp_api_key_here

# Application Settings
APP_NAME=StockInformationWebsiteAIBackend
APP_VERSION=1.0.0
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# Include your frontend URL for local development and production
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# Database Configuration (Neon PostgreSQL)
# Get credentials from https://console.neon.tech
DATABASE_URL=postgresql://username:password@ep-xxxxx.us-west-2.aws.neon.tech/neondb?sslmode=require

# JWT Authentication (Stack Auth)
# The backend validates JWT tokens from the frontend using Stack Auth's public keys
# Get your project ID from https://app.stack-auth.com/
NEON_AUTH_ISSUER_URI=https://api.stack-auth.com/api/v1/projects/your_project_id
STACK_JWKS_URL=https://api.stack-auth.com/api/v1/projects/your_project_id/.well-known/jwks.json
JWT_ALGORITHM=RS256
JWT_ISSUER=https://api.stack-auth.com

# LangGraph Agent Configuration
AGENT_MODEL=gpt-4-turbo-preview
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
